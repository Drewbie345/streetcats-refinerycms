<% content_for :body do %>
  <div class="container">
    <div class="row borders each-cat">
      <h2><%=raw @cat.name %></h2>
      <p><%=raw @cat.description %></p>
      <h3>Birthdate: <%=raw @cat.dob %></h3>
      <h3>Gender: <%=raw @cat.gender %></h3>
      <h3>Breed: <%=raw @cat.breed %></h3>
      <%= image_fu @cat.photo, :grid, :class => "rounded" %>
    </div>
  </div>
<% end %>

<% content_for :side_body do %>
  <div class="container">  
    <div class="row borders">
      <h2><%= t('.other') %></h2>
      <ul id="cats">
        <% @cats.each do |cat| %>
          <li>
            <%= link_to image_tag(cat.photo.thumbnail('100x100').url), refinery.cats_cat_path(cat) %>
            <div><strong><%= cat.name %></strong></div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= render '/refinery/content_page' %>
