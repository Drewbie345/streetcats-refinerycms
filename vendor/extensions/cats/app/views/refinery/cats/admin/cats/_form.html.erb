<%= form_for [refinery, :cats_admin, @cat] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @cat,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "cats/cat" -%>
  </div>

  <div class='field'>
    <%= f.label :dob -%>
    <%= f.date_select :dob -%>
  </div>

  <div class='field'>
    <%= f.label :gender -%>
    <%= f.text_field :gender -%>
  </div>

  <div class='field'>
    <%= f.label :breed -%>
    <%= f.text_field :breed -%>
  </div>

  <div class='field'>
    <%= f.label :declawed -%>
    <%= f.text_field :declawed -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @cat.photo,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.cats.admin.cats.cat'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @cat.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
