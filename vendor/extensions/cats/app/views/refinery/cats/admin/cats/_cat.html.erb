<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(cat) -%>">
  <span class='title'>
    <%= cat.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.cats_cat_path(cat),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_cats_admin_cat_path(cat),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.cats_admin_cat_path(cat),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => cat.name),
        :method => :delete %>
  </span>
</li>
